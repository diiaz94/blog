
<script type="text/javascript">
$(function () {
	$("body").css("background","black");
	$("body").css("color","white");
	if ($(".nav-desktop").length) {
		$(".nav-desktop").css("position","absolute");
	}; 
	initTabs();
});
</script>
<header class="header">
		<img src="/photo_store/volante.png">
</header>
<div class="row principal-container" >

	<div class="col-xs-3">
	</div>
	<div class="col-xs-6">
		<ul class="tab">
			<li class="active"><a href="#news" class="tablinks"> BLOG</a></li>
			<li><a href="#updates" class="tablinks"> UPDATES</a></li>
		</ul>
		<div class="row">
			<div class="col-xs-8 no-padding-right">
				<div class="posts-container" id="tabs-container">
					<div id="news" class="tab-content">
					 	<div class="post-container template hidden">
						 	<h1 class="title"></h1>
						 	<h4 class="subtitle"></h3>
						 	<h4 class="fecha_c"></h3>
						 	<div class="container-image-post">
						 		<img class="post-img" src="" alt="">
						 	</div>
						 	<%if current_user and current_user.admin?%>
							 	<div class="buttons">
								 	<a type="button" data-confirm="¿Estás seguro/a?" rel="nofollow" data-method="delete"  style="color:red;" class="btn btn-default f-l delete" aria-label="Left Align" > 
								 		<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
								 		Eliminar
								 	</a>
								 	<a type="button" class="btn btn-default f-r edit" >
								 		<span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
								 		Editar
								 	</a>
							 	</div>
						 	<%end%> 
							 	<p class="description"></p>
					 		<hr> 
						</div>
					</div>
					<div id="updates" class="tab-content">
						<div class="post-container template hidden">
						 	<h1 class="title"></h1>
						 	<h4 class="subtitle"></h3>
						 	<h4 class="fecha_c"></h3>
						 	<div class="container-image-post">
						 		<img class="post-img" src="" alt="">
						 	</div>
						 	<%if current_user and current_user.admin?%>
							 	<div class="buttons">
								 	<a type="button" data-confirm="¿Estás seguro/a?" rel="nofollow" data-method="delete" style="color:red;" class="btn btn-default f-l delete" aria-label="Left Align" > 
								 		<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
								 		Eliminar
								 	</a>
								 	<a type="button" class="btn btn-default f-r edit" >
								 		<span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
								 		Editar
								 	</a>
							 	</div>
						 	<%end%> 
						 	<p class="description"></p>
					 		<hr> 
						</div>
					 </div>
				<div class="loading-container">
					<img src="/photo_store/ajax-loader.gif">
				</div>	
				</div>
			</div>
			<div class="col-xs-4 no-padding-left">
				<div class="link-network"><img class="img-network" src="/photo_store/btn_network.png"></img></div>
				<div class="link-advertising"><img class="img-advertising" src="/photo_store/publicidad.png"></img></div>
				<div class="box-searching">
					<div>
						<div class="input-group"> 
							<input type="text" class="form-control input-searching empty" aria-label="Text input with multiple buttons" id="iconified" placeholder="&#xF002;"> 
							<div class="input-group-btn"> 
								<button type="button" class="btn btn-search">BUSCAR</button> 
							</div>

						</div>
						<div class="title-search">ARCHIVO</div> 
						<div class="searching-result">
				    	<% @posts.each do |post| %>
				    		<div class="row-result">
								<p>
									<span class="searching-title"><%=post.title%></span><br>
									<span class="searching-subtitle"><%=post.subtitle%></span>
								</p>
				    		</div>
						<% end %>

						</div>
					</div>
				</div>
			</div>

		</div>
	</div>
	<div class="col-xs-3">
	</div>
</div>
<footer align="center">
