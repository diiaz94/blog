<h2>Registra el usuario administrador</h2>
<%= form_for(@user,url: {action: "create_admin_user"}  ) do |f| %>


  <script type="text/javascript">
   var errorsArray=[] ;
  <% @user.errors.each do |atributo, mensaje| %>
      errorsArray.push({atributo:"<%="#{atributo}"%>",mensaje:"<%="#{mensaje}"%>"});
  <% end %>
  $( document ).ready(function() {
    validarErrores(errorsArray);
  });
</script>
  <%if !@user.persisted?%>
  <div class="row">
    <div class="col-xs-0 col-sm-2 col-md-4"></div>
    <div class="col-xs-12 col-sm-8 col-md-4">
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Datos de ingreso</h3>
        </div><!-- /.box-header -->
        <div class="box-body">
          <div class="row">
            <div class="col-xs-12">
              <div class="form-group">
                <%= f.label :username, "Nombre de usuario"%>*<br>
                <%= f.text_field :username,class:"form-control"  %>
              </div>
            </div>
            <div class="col-xs-12">
              <div class="form-group">
                <%= f.label :password, "Contraseña"%>*<br>
                <%= f.password_field :password,class:"form-control"  %>
              </div>
            </div>
            <div class="col-xs-12">
              <div class="form-group">
                 <%= f.label :password_confirmation, "Confirmar contraseña" %><br />
                 <%= f.password_field :password_confirmation,class:"form-control" %>
               </div>
            </div>
          </div>
        </div>
      </div><!-- /.box -->
    <div class="box-footer">
      <%= f.submit "Guardar", class: "visible-xs btn btn-block btn-primary btn-lg" %>
      <%= f.submit "Guardar", class: "hidden-xs btn btn-primary" %>
    </div>

    </div>
    <div class="col-xs-0 col-sm-2 col-md-4"></div>
  </div>
  <%end%>
  


<% end %>

